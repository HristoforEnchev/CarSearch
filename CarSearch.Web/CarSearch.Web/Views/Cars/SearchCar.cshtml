@model SearchCarFormModel

@{
    ViewData["Title"] = "Search Car";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-4">
            <form  method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Importer"></label>
                    <select asp-for="Importer" asp-items="Model.Importers"  class="form-control" ></select>
                    <span asp-validation-for="Importer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SearchString"></label>
                    <input asp-for="SearchString" class="form-control"/>
                    <span asp-validation-for="SearchString" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Search</button>
                </div>
            </form>
    </div>
    
</div>



